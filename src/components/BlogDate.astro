---
const { date } = Astro.props;

const day = new Date(date).getDate();
const month = new Date(date).getMonth()

const getMonthLabel = (number: number) => {
  const months: any = {
    1: "ENE",
    2: "FEB",
    3: "MAR",
    4: "ABR",
    5: "MAY",
    6: "JUN",
    7: "JUL",
    8: "AGO",
    9: "SEP",
    10: "OCT",
    11: "NOV",
    12: "DIC",
  }

  return months[number] || '';
}

const monthLabel = getMonthLabel(month + 1)
---

<div class="w-20 dark:text-gray-300 text-center font-semibold text-lg">
  <div>{day}</div>
  <div>{monthLabel}</div>
</div>
