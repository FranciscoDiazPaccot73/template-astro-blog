---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE, TWITTER, GITHUB } from '../consts';
---

<header class="p-5">
	<h2 class="dark:text-white mb-8">
		{SITE_TITLE}
		<img class='pt-4' width={720} height={360} src='/placeholder-about.jpg' alt="" />
	</h2>
	<nav class="pb-6 border-b border-gray-500">
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/blog">Blog</HeaderLink>
		<HeaderLink href={TWITTER} target="_blank">Twitter</HeaderLink>
		<HeaderLink href={GITHUB} target="_blank">GitHub</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
